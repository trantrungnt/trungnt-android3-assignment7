<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayoutContentSMS"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayoutContentSMS_height">

        <TextView
            android:id="@+id/tvPhone"
            android:textColor="@color/colorTextTvPhone"
            android:layout_marginTop="@dimen/text_view_marginTop"
            android:layout_marginLeft="@dimen/text_view_marginLeft"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="@dimen/text_view_height" />

        <TextView
            android:id="@+id/tvContentSMS"
            android:textColor="@color/colorTextTvContentSMS"
            android:layout_marginTop="@dimen/text_view_marginTop"
            android:layout_marginLeft="@dimen/text_view_marginLeft"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="@dimen/text_view_height" />
    </LinearLayout>
</LinearLayout>