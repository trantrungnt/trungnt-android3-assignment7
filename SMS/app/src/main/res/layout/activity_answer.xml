<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvDisplayAnswer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lvDisplayAnswer_height">
    </ListView>

    <EditText
        android:id="@+id/editTextContentSendSMS"
        android:layout_below="@id/lvDisplayAnswer"
        android:hint="@string/editTextContentSendSMS_hint"
        android:gravity="center"
        android:layout_marginLeft="@dimen/editTextContentSendSMS_marginLeft"
        android:layout_width="@dimen/editTextContentSendSMS_width"
        android:layout_height="@dimen/editTextContentSendSMS_height" />

    <ImageView
        android:id="@+id/imgDisplayAnswerTypeOfRight"
        android:layout_below="@id/lvDisplayAnswer"
        android:layout_toRightOf="@id/editTextContentSendSMS"
        android:layout_marginLeft="@dimen/imgDisplayAnswerTypeOfRight_marginLeft"
        android:layout_width="@dimen/imgDisplayAnswerTypeOfRight_width"
        android:layout_height="@dimen/imgDisplayAnswerTypeOfRight_height" />
</RelativeLayout>